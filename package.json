{
  "name": "caption-studio-back",
  "version": "1.0.0",
  "description": "Backend service for Caption Studio",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "check-secrets": "node check-secrets.js",
    "pre-commit": "node check-secrets.js"
  },
  "keywords": [
    "express",
    "nodejs",
    "backend"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@supabase/supabase-js": "^2.75.0",
    "archiver": "^7.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "multer": "^2.0.2",
    "openai": "^6.3.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "services/**/*.js",
      "repositories/**/*.js",
      "models/**/*.js",
      "utils/**/*.js",
      "middleware/**/*.js",
      "!**/__tests__/**",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 16,
        "functions": 17,
        "lines": 20,
        "statements": 19
      }
    }
  }
}
